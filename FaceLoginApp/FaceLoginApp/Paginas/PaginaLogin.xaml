<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceLoginApp.Paginas.PaginaLogin">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label Text="Inicio de sesión" TextColor="Black" FontSize="Large" Margin="15"/>

            <StackLayout Padding="15">
                <Image x:Name="imagen" WidthRequest="300" HeightRequest="300" />
            </StackLayout>

            <ActivityIndicator x:Name="indicator" Color="Green" VerticalOptions="Center" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnLogin" Text="Login" Order="Primary" Priority="0" Clicked="btnLogin_Clicked"/>
        <ToolbarItem x:Name="btnRegistrar" Text="Registrar" Order="Primary" Priority="0" Clicked="btnRegistrar_Clicked"/>
        <ToolbarItem x:Name="btnGrupo" Text="Grupo" Order="Primary" Priority="0" Clicked="btnGrupo_Clicked"/>
        <ToolbarItem x:Name="btnEntrenar" Text="Entrenar" Order="Primary" Priority="0" Clicked="btnEntrenar_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>